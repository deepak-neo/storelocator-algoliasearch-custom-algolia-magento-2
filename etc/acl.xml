<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Neosoft_StoreLocator::storelocator" title="Store Locator" sortOrder="100">
                    <resource id="Neosoft_StoreLocator::manage_stores" title="Manage Stores" sortOrder="10"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">                            
                            <resource id="Neosoft_StoreLocator::configuration" title="Store Locator Configurations" />                            
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
